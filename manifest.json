{
  "name": "Pulse Plus",
  "description": "Дополнительные функции для пульса",
  "version": "2.3.3",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png"
    },
    "default_title": "Pulse Plus",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "128": "icons/128.png",
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  },
  "permissions": [
    "notifications",
    "activeTab",
    "scripting",
    "storage",
    "https://pulse.stack-it.ru/*",
    "webRequest",
    "webRequestBlocking",
    "*://chat.stack-it.ru/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "host_permissions": ["https://pulse.stack-it.ru/*"],
  "content_scripts": [
    {
      "matches": ["https://pulse.stack-it.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "modules.json",
    "scripts/*.js",
    "styles/*.css",
    "popup/*.html",
    "popup/*.js",
    "popup/*.css",
    "background.js"
  ]
}