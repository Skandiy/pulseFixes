{
  "name": "Pulse Plus",
  "description": "Дополнительные функции для пульса",

  "version": "3.0.0",
  "update_url": "https://vpn.sk-serv.ru:9443/extensions/pulse-fix/update.xml",

  "manifest_version": 3,

  "action": {
    "default_title": "Pulse Plus",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png"
    }
  },

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },

  "permissions": [
    "notifications",
    "storage",
    "activeTab",
    "scripting",
    "declarativeNetRequest"
  ],

  "host_permissions": [
    "https://pulse.stack-it.ru/*",
    "https://chat.stack-it.ru/*",
    "https://chat.sk-serv.ru/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://pulse.stack-it.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "modules.json",
        "scripts/*.js",
        "styles/*.css",
        "popup/*.html",
        "popup/*.js",
        "popup/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}